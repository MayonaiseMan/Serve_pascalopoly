<Window x:Class="Serve_pascalopoly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Serve_pascalopoly"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="out_lbl" Content="" HorizontalAlignment="Left" Margin="482,10,0,0" VerticalAlignment="Top" Width="300" Height="400" Background="Black" BorderBrush="Black" Foreground="GreenYellow"/>
        <ListView x:Name="client_view" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="280">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="nome" Width="140" DisplayMemberBinding="{Binding Path=Key}"/>
                    <GridViewColumn Header="ip" Width="140" DisplayMemberBinding="{Binding Path=value}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
